<h1>Edit Book</h1>
<form method="post" action="/catalogue/<%= @book.id %>/update-book">
  <label for="name-field">Book name:</label>
  <input
  type="text"
  name="name"
  id="name-field"
  value="<%= @book.name %>"
  />

  <label for="edition-field">Edition:</label>
  <input
  type="text"
  name="edition"
  id="edition-field"
  value="<%= @book.edition %>"
  />

  <input type='submit' value="Update Book">
</form>
