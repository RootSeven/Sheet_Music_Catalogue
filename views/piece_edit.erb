<h1>Edit Piece</h1>

<form action="/catalogue/<%= @piece.id %>/update-piece" method="post">

  <label for="name-field">Piece Name:</label>
    <input
    type="text"
    name="name"
    value="<%= @piece.name %>"
    id="name-field"
    />

  <label for="suite-field">Suite:</label>
    <input
    type="text"
    name="suite"
    value="<%= @piece.suite %>"
    id="suite-field"
    />

  <label for="movement-field">Movement:</label>
    <input
    type="number"
    name="movement"
    value="<%= @piece.movement %>"
    id="movement-field"
    />

  <label for="catalogue-name-field">Catalogue Prefix:</label>
    <input
    type="text"
    name="catalogue_name"
    value="<%= @piece.catalogue_name %>"
    id="catalogue-name-field"
    />

  <label for="opus-field">Opus:</label>
    <input
    type="number"
    name="opus"
    id="opus-field"
    value="<%= @piece.opus %>"
    />

  <label for="work-number-field">Number:</label>
    <input
    type="number"
    name="work_number"
    id="work-number-field"
    value="<%= @piece.work_number %>"
    />

  <label for="composer-field">Composer:</label>
    <input
    type="text"
    name="composer"
    id="composer-field"
    value="<%= @piece.composer %>"
    />

  <input type="submit" value="Update Piece">

</form>
